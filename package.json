{
    "name": "iles-app",
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "build": "iles build && node build-sitemap.mjs && npm run verify",
        "now": "npm run build && npm run preview",
        "preview": "iles preview --open --port 5050 --host",
        "reinstall": "rm -rf node_modules package-lock.json && npm install",
        "start": "iles dev --open --host",
        "typecheck": "vue-tsc --noEmit",
        "verify": "node validate-data.mjs && npm run verify-internal-links",
        "verify-internal-links": "check-html-links dist/ 2>&1 > /dev/null | ( ! grep --context=1000 '❌' )",
        "verify-external-links": "check-html-links dist/ --validate-externals"
    },
    "engines": {
        "node": ">= 20.0.0"
    },
    "devDependencies": {
        "@modyfi/vite-plugin-yaml": "^1.1.1",
        "ajv": "^8.17.1",
        "check-html-links": "^0.2.4",
        "debug": "^4.4.0",
        "glob": "^11.0.1",
        "got": "^14.4.6",
        "iles": "^0.10.0-beta.1",
        "js-yaml": "^4.1.0",
        "json-stable-stringify": "^1.2.1",
        "linkedom": "^0.18.9",
        "neodoc": "^2.0.2",
        "papaparse": "^5.5.2",
        "pdfjs-dist": "^4.10.38",
        "prettier": "^3.5.3",
        "typescript": "^5.8",
        "vue-tsc": "^2.2"
    },
    "dependencies": {
        "luxon": "^3.5.0"
    }
}
