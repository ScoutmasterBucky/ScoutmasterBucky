{
    "description": "Requirement",
    "type": "object",
    "properties": {
        "children": {
            "$ref": "./requirement-list.json"
        },
        "requirement": {
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "type": "number"
                }
            ]
        },
        "resources": {
            "description": "One or more resources that relate to the requirement",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "href": {
                        "type": "string"
                    },
                    "text": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "pdf",
                            "podcast",
                            "video",
                            "website",
                            "website with videos"
                        ]
                    }
                },
                "additionalProperties": false,
                "required": ["text"]
            },
            "minItems": 1
        },
        "text": {
            "description": "HTML content",
            "type": "string"
        }
    },
    "additionalProperties": false,
    "required": ["requirement", "text"]
}
