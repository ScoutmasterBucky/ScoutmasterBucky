---
import Tile from './tile.astro';
import { getEntry } from 'astro:content';

interface Props {
    'test-lab': string;
}

const { 'test-lab': testLab } = Astro.props.frontmatter || Astro.props;
const testLabInfo = (await getEntry('testLabs', testLab))?.data;
---

<Tile>
    <a href={`/test-labs/${testLab}/`}>
        <img src={testLabInfo.image} alt={testLabInfo.name} />
        <div>{testLabInfo.name}</div>
    </a>
</Tile>

<style>
    a {
        display: flex;
        width: 100%;
        flex-direction: column;
        align-items: center;
        padding: 0.5em;
        text-decoration: none;
        color: inherit;
    }

    img {
        height: 55px;
        width: auto;
    }

    div {
        font-weight: bold;
        color: var(--smb-text-color);
    }
</style>
